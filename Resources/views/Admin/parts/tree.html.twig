<script>
    $(function(){
     $('.menu').bind(
         'click',
         function(e) {
             var self = $(e.target);
             $(".contextMenu.show").removeClass('show');
     
             if(self.hasClass('on')){
                 self.removeClass('on');    
             }else{
                 $("a.menu.on").removeClass('on');
                 self.addClass('on');
                 $(e.target).next().addClass('show');
             }
         }
     );
     
    });
</script>