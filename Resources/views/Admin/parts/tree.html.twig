<div class="col-lg-3" id="cmsTree">
    <div class="widget-container fluid-height">
        <div class="widget-content">
            <div class="panel-group" id="accordion">

                {% for key, blog in blogs %}
                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <a class="accordion-toggle{% if loop.first %}{% else %} collapsed{% endif %}" data-parent="#accordion" data-toggle="collapse" href="#collapseType{{blog.id}}"><div class="caret pull-right"></div>{{ blog.host.title }}</a>
                        </div>
                    </div>
                    <div class="panel-collapse{% if loop.first %}{% else %} collapse{% endif %}" id="collapseType{{blog.id}}">
                        <div class="panel-body">
                            <h4>Articles</h4>
                            <a href="{{ path(url.edit, {'blog' : blog.id}) }}" class="btn btn-primary-outline"><i class="icon-edit"></i>Edit</a>
                        </div>
                        <div class="panel-body">
                            <h4>Blog</h4>
                            <a href="{{ path(url.edit_categ, {'blog' : blog.id}) }}" class="btn btn-primary-outline"><i class="icon-edit"></i>Edit Categories</a>
                            <a href="{{ path(url.setup, {'blog' : blog.id}) }}" class="btn btn-default"><i class="icon-cog"></i>Setup</a>
                        </div>
                    </div>
                </div>
