<div class="form-group">
    <label class="control-label col-lg-3">{% trans %}Picture title / alt{% endtrans %}</label>
    <div class="col-lg-9">
        <input class="form-control" placeholder="" type="text" name="attributes_{{name}}[title]" value="{% if attribute.value %}{{attribute.value.title}}{% endif %}"/>
    </div>
</div>

<div class="form-group">
    <label class="control-label col-lg-3">{% trans %}Picture credit / author{% endtrans %}</label>
    <div class="col-lg-9">
        <input class="form-control" placeholder="" type="text" name="attributes_{{name}}[author]" value="{% if attribute.value %}{{attribute.value.author}}{% endif %}"/>
    </div>
</div>

<div class="form-group">
    <label for="myaccount_is_active" class="control-label col-lg-3">{% trans %}Preview{% endtrans %}</label>
    <div class="col-lg-9">

        {% if attribute.value %}
        <img src="{{ teelMediaLoad(attribute.value.id, 200, 200, false, asset('bundles/majesmedia/img/icon-document.png'),{ 'src' : true })|raw }}" width="200" title="{{attribute.value.title}}" id="preview{{name}}"/>
        {% else %}
        <img src="" title="" id="preview{{name}}" width="200"/>
        {% endif %}
    </div>
</div>

<div class="form-group">
	<label for="myaccount_media" class="control-label col-lg-3">{{name|capitalize}} </label>
	<div class="col-lg-9">
        <input type="hidden" name="attributes_{{name}}[id]" value="{% if attribute.value %}{{attribute.value.id}}{% endif %}" id="{{name}}_id">
        <div class="widget-container fluid-height">
            <div class="heading tabs">
                <ul class="nav nav-tabs pull-right" data-tabs="tabs" id="tabs{{name}}">
                    <li class="active">
                        <a data-toggle="tab" href="#tab1{{name}}"><i class="icon-comments"></i><span>{% trans %}Upload new file{% endtrans %}</span></a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#tab2{{name}}" class="triggerMediaPicker"><i class="icon-user"></i><span>{% trans %}Existing media{% endtrans %}</span></a>
                    </li>
                </ul>
            </div>
            <div class="tab-content" id="my-tab-content{{name}}">
                <div class="tab-pane active" id="tab1{{name}}" style="padding: 10px;">
                    <input type="file" name="attributes_{{name}}[value]">
                </div>
                <div class="tab-pane" id="tab2{{name}}">
                    <iframe src="{{path('_media_picker', {'context': 'cms'})}}?ref={{name}}" style="width: 100%; border: 0; height: 500px;"></iframe>
                </div>
                  
            </div>
        </div>
		
		
	</div>
</div>


<div class="form-group">
	<label for="myaccount_is_active" class="control-label col-lg-3">{% trans %}Remove picture{% endtrans %}</label>
	<div class="col-lg-9">
		<label class="checkbox">
                    <input type="checkbox" name="attributes_{{name}}[remove]" value="1"><span></span>
		</label>
	</div>
</div>





<script>
    $(document).ready(function(){

        $("a.triggerMediaPicker").click(function(e){
            e.preventDefault();
        });

    });
</script>